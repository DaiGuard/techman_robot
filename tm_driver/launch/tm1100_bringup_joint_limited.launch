<?xml version="1.0"?>
<!--
  Techman robot tm900 launch. Wraps tm900_bringup.launch. Uses the 'limited'
  joint range [-PI, PI] on all joints.
  
  Usage:
    tm900_bringup_joint_limited.launch robot_ip:=<value>
-->
<launch>
  
  <!-- robot_ip: IP-address of the robot's socket-messaging server -->
  <arg name="prefix" default="" />
  <arg name="robot_ip"/>
  <arg name="servo_time" default="0.01" />
  <arg name="min_payload" default="0.0" />
  <arg name="max_payload" default="5.0" />

  <!-- add payload parameter -->
  <arg name="payload_mass" default="6.0" />
  <arg name="payload_center_x" default="0.0" />
  <arg name="payload_center_y" default="0.0" />
  <arg name="payload_center_z" default="0.06" />
  
  <!-- robot model -->
  <!--
  <include file="$(find tm_description)/launch/tm900_upload.launch">
    <arg name="limited" value="true" />
  </include>
  -->
  
  <include file="$(find tm_driver_test)/launch/tm_common.launch">
    <arg name="prefix" value="$(arg prefix)" />
    <arg name="robot_ip" value="$(arg robot_ip)" />
    <arg name="servo_time" value="$(arg servo_time)" />
    <arg name="min_payload" value="$(arg min_payload)" />
    <arg name="max_payload" value="$(arg max_payload)" />

    <!-- add payload parameter -->
    <arg name="payload_mass" value="$(arg payload_mass)" />
    <arg name="payload_center_x" value="$(arg payload_center_x)" />
    <arg name="payload_center_y" value="$(arg payload_center_y)" />
    <arg name="payload_center_z" value="$(arg payload_center_z)" />

  </include>
</launch>
